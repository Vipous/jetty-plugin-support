<model xmlns="http://modello.codehaus.org/MODELLO/1.4.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://modello.codehaus.org/MODELLO/1.4.0 http://modello.codehaus.org/xsd/modello-1.4.0.xsd">
	<id>jetty-plugin-list</id>
	<name>JettyPluginList</name>
	<description>Modello DataModel describing the available jetty-plugins</description>
	<defaults>
		<default>
			<key>package</key>
			<value>org.eclipse.jetty.plugins.model</value>
		</default>
	</defaults>
	<classes>
		<class rootElement="true" xml.tagName="AvailablePlugins">
			<name>AvailablePlugins</name>
			<version>1.0.0</version>
			<fields>
				<field>
					<name>plugins</name>
					<version>1.0.0</version>
					<association xml.itemsStyle="wrapped">
						<type>Plugin</type>
						<multiplicity>*</multiplicity>
					</association>
					<description>All available plugins</description>
					<required>true</required>
				</field>
			</fields>
		</class>
		<class>
			<name>Plugin</name>
			<version>1.0.0</version>
			<fields>
				<field>
					<name>name</name>
					<type>String</type>
					<description>name of the plugin</description>
					<required>true</required>
				</field>
				<field>
					<name>license</name>
					<type>String</type>
					<description>license description for that plugin</description>
					<comment>might make sense to have a fixed set of licenses (maybe even a license class) at a later stage. So we can optionally hide plugins if they do not have a specific license and make them available only via cmdl switch or similar</comment>
					<required>true</required>
				</field>
			</fields>
		</class>
	</classes>
</model>